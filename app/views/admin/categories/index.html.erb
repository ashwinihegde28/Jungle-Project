<section class="admin-products-categories">

  <header class="page-header">
    <h1>  Admin Categories </h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="category-title">Category</th>
          <th class="category-title">Plants</th>
        </tr> 
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

  </div>

</section>